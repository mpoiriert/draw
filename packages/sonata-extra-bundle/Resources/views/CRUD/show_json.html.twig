{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field %}
    {% if not value %}
        <i>No data</i>
    {% endif %}
    <div class="json-viewer"
         data-json='{{ value|json_encode()|e('html_attr') }}'
         data-options='{{ field_description.options.view_options|default({})|json_encode()|e('html_attr') }}'
    ></div>
{% endblock %}