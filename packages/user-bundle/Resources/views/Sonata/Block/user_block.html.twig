{% block user_block %}
    {% if app.user %}
        {% set _profile_uri = user_admin().generateUrl((user_admin().isGranted('EDIT', app.user) ? 'edit' : 'show'), {id: app.user.id})  %}
        <li class="user-header bg-light-blue">
            <p>{{ app.user }}</p>
        </li>
        <li class="user-footer">
            <div class="pull-left">
                <a href="{{ _profile_uri }}" class="btn btn-default btn-flat"><i class="fas fa-user"></i> Profile</a>
            </div>
            <div class="pull-right">
                <a href="{{  url('admin_logout') }}" class="btn btn-default btn-flat"><i class="fas fa-sign-out fa-fw"></i> Logout</a>
            </div>
        </li>
    {% endif %}
{% endblock %}
