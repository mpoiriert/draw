{% extends '@SonataAdmin/CRUD/action.html.twig' %}

{% block title %}{{ 'title_select_command'|trans({}, 'DrawSonataCommandBundle') }}{% endblock %}

{% block content %}
    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">
                {{ block('title') }}
            </h3>
        </div>
        <div class="box-body">
            {% for command in commands %}
                <div class="col-lg-2 col-md-3 col-sm-4 col-xs-6">
                    <a href="{{ admin.generateUrl('create', {'command': command.name}) }}"
                       class="btn btn-app btn-block"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="{{ command.label|trans({}, 'DrawSonataCommandBundle') }}"
                    >
                        {% if command.icon %}
                            <i class="fa {{ command.icon }}"></i>
                        {% endif %}
                        {{ command.label }}
                    </a>
                </div>
            {% else %}
                <span class="alert alert-info">{{ 'no_command_available'|trans({}, 'DrawSonataCommandBundle') }}</span>
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
