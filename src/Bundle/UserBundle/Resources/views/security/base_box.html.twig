{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block sonata_nav %}
{% endblock sonata_nav %}

{% block logo %}
{% endblock logo %}

{% block sonata_left_side %}
{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}

{% block sonata_wrapper %}
<div class="login-box">
    {% block login_box_header %}
        <div class="login-logo">
            <a href="{{ path('sonata_admin_dashboard') }}">
                {% if sonata_admin.adminPool.getOption('title_mode') in ['single_image', 'both'] %}
                    <div>
                        <img style="width:64px;" src="{{ asset(sonata_admin.adminPool.titlelogo) }}"
                             alt="{{ sonata_admin.adminPool.title }}">
                    </div>
                {% endif %}
                {% if sonata_admin.adminPool.getOption('title_mode') in ['single_text', 'both'] %}
                    <span>{{ sonata_admin.adminPool.title }}</span>
                {% endif %}
            </a>
        </div>
    {% endblock login_box_header %}
    <div class="login-box-body">
        {% block login_box_body %}
        {% endblock login_box_body %}
        {% block login_box_footer %}
            {% if not is_granted("ROLE_USER") %}
                <a href="{{ path('admin_login') }}">
                    Authentication
                </a>
            {% endif %}
        {% endblock login_box_footer %}
    </div>
</div>
{% endblock sonata_wrapper %}